<Page x:Class="Uno.Themes.Samples.Content.NestedSamples.CommandBarSample_NestedPage1"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Themes.Samples.Content.NestedSamples"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:toolkit="using:Uno.UI.Toolkit"
	  xmlns:smtx="using:ShowMeTheXAML"
	  xmlns:todo="what should be done"
	  xmlns:xamarin="http://uno.ui/xamarin"
	  mc:Ignorable="d todo xamarin"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Page.Resources>

		<!--  Override default BodyLargeFontWeight resource  -->
		<x:Double x:Key="BodyLargeFontSize">32</x:Double>

		<!--  Override default BodyLargeFontWeight resource  -->
		<x:String x:Key="BodyLargeFontWeight">Extra Bold</x:String>

	</Page.Resources>

	<!-- Both TextBlocks below would use the overridden values in the Page.Resource -->
	<StackPanel>
		<TextBlock Text="BodyLarge Style with Overridden Values"
				   Style="{StaticResource BodyLarge}" />
		<TextBlock Text="Set Overridden Values Locally"
				   FontSize="{ThemeResource BodyLargeFontSize}"
				   FontWeight="{ThemeResource BodyLargeFontWeight}" />
	</StackPanel>
</Page>
