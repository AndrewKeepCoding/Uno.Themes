								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipOutlinedFilter_Selected"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Selected"
												IsChecked="True"
												Style="{StaticResource MaterialOutlinedFilterChipStyle}" />
								</smtx:XamlDisplay>
							</StackPanel>
						</ScrollViewer>


						<!-- MaterialFilledActionChipStyle -->
						<TextBlock Text="Action - Filled"
								   Style="{StaticResource MaterialSubtitle1}" />
						<ScrollViewer>
							<StackPanel Orientation="Horizontal"
										Spacing="8">
								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipFilledAction_Enabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Enabled"
												Style="{StaticResource MaterialFilledActionChipStyle}">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipFilledAction_Disabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Disabled"
												Style="{StaticResource MaterialFilledActionChipStyle}"
												IsEnabled="False">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>
							</StackPanel>
						</ScrollViewer>

						<!-- MaterialOutlinedActionChipStyle -->
						<TextBlock Text="Action - Outlined"
								   Style="{StaticResource MaterialSubtitle1}" />
						<ScrollViewer>
							<StackPanel Orientation="Horizontal"
										Spacing="8">
								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipOutlinedAction_Enabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Enabled"
												Style="{StaticResource MaterialOutlinedActionChipStyle}">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipOutlinedAction_Disabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Disabled"
												Style="{StaticResource MaterialOutlinedActionChipStyle}"
												IsEnabled="False">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>
							</StackPanel>
						</ScrollViewer>

						<!-- ### ChipGroup -->
						<TextBlock Text="ChipGroup"
								   Margin="0,36,0,0"
								   Style="{StaticResource MaterialHeadline6}" />

						<!-- ChipGroup Input -->
						<TextBlock Text="Input"
								   Style="{StaticResource MaterialSubtitle1}" />
						<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipGroup_Input"
										  Style="{StaticResource XamlDisplayBelowStyle}">

							<ScrollViewer HorizontalScrollMode="Auto"
										  HorizontalScrollBarVisibility="Auto"
										  VerticalScrollMode="Disabled"
										  VerticalScrollBarVisibility="Hidden">

								<chips:ChipGroup ItemsSource="{Binding Data.MutableTestCollection}"
												 ItemRemoved="RemoveChipItem"
												 Style="{StaticResource MaterialFilledInputChipGroupStyle}"
												 Margin="8,0,8,8">
									<chips:ChipGroup.IconTemplate>
										<DataTemplate>
											<Image Source="{Binding Image}" />
										</DataTemplate>
									</chips:ChipGroup.IconTemplate>

									<chips:ChipGroup.ItemTemplate>
										<DataTemplate>
											<TextBlock Style="{StaticResource MaterialBody1}">
												<Run Text="Item #" /><Run Text="{Binding Index}" />
											</TextBlock>
										</DataTemplate>
									</chips:ChipGroup.ItemTemplate>
								</chips:ChipGroup>
							</ScrollViewer>
						</smtx:XamlDisplay>
						<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipGroup_InputOutlined"
										  Style="{StaticResource XamlDisplayBelowStyle}">

							<ScrollViewer HorizontalScrollMode="Auto"
										  HorizontalScrollBarVisibility="Auto"
										  VerticalScrollMode="Disabled"
										  VerticalScrollBarVisibility="Hidden">

								<chips:ChipGroup ItemsSource="{Binding Data.MutableTestCollection}"
												 ItemRemoved="RemoveChipItem"
												 Style="{StaticResource MaterialOutlinedInputChipGroupStyle}"
												 Margin="8,0,8,8">

									<chips:ChipGroup.IconTemplate>
										<DataTemplate>
											<Image Source="{Binding Image}" />
										</DataTemplate>
									</chips:ChipGroup.IconTemplate>

									<chips:ChipGroup.ItemTemplate>
										<DataTemplate>
											<TextBlock Style="{StaticResource MaterialBody1}">
												<Run Text="Item #" /><Run Text="{Binding Index}" />
											</TextBlock>
										</DataTemplate>
									</chips:ChipGroup.ItemTemplate>
								</chips:ChipGroup>
							</ScrollViewer>
						</smtx:XamlDisplay>
						<Button Content="Reset chip items"
								Click="ResetChipItems"
								Margin="0,10,0,20" />

						<!-- ChipGroup Choice -->
						<TextBlock Text="Choice"
								   Style="{StaticResource MaterialSubtitle1}" />
						<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipGroup_Choice"
										  Style="{StaticResource XamlDisplayBelowStyle}">

							<ScrollViewer HorizontalScrollMode="Auto"
										  HorizontalScrollBarVisibility="Auto"
										  VerticalScrollMode="Disabled"
										  VerticalScrollBarVisibility="Hidden">

								<chips:ChipGroup ItemsSource="{Binding Data.TestCollection}"
												 Style="{StaticResource MaterialFilledChoiceChipGroupStyle}"
												 Margin="8,0,8,8">

									<chips:ChipGroup.ItemTemplate>
										<DataTemplate>
											<TextBlock Style="{StaticResource MaterialBody1}">
												<Run Text="Item #" /><Run Text="{Binding Index}" />
											</TextBlock>
										</DataTemplate>
									</chips:ChipGroup.ItemTemplate>
								</chips:ChipGroup>
							</ScrollViewer>
						</smtx:XamlDisplay>
						<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipGroup_ChoiceOutlined"
										  Style="{StaticResource XamlDisplayBelowStyle}">

							<ScrollViewer HorizontalScrollMode="Auto"
										  HorizontalScrollBarVisibility="Auto"
										  VerticalScrollMode="Disabled"
										  VerticalScrollBarVisibility="Hidden">

								<chips:ChipGroup ItemsSource="{Binding Data.TestCollection}"
												 Style="{StaticResource MaterialOutlinedChoiceChipGroupStyle}"
												 SelectionMode="Single"
												 Margin="8,0,8,8">

									<chips:ChipGroup.ItemTemplate>
										<DataTemplate>
											<TextBlock Style="{StaticResource MaterialBody1}">
												<Run Text="Item #" /><Run Text="{Binding Index}" />
											</TextBlock>
										</DataTemplate>
									</chips:ChipGroup.ItemTemplate>
								</chips:ChipGroup>
							</ScrollViewer>
						</smtx:XamlDisplay>

						<!-- ChipGroup Filter -->
						<TextBlock Text="Filter"
								   Style="{StaticResource MaterialSubtitle1}" />
						<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipGroup_Filter"
										  Style="{StaticResource XamlDisplayBelowStyle}">

							<ScrollViewer HorizontalScrollMode="Auto"
										  HorizontalScrollBarVisibility="Auto"
										  VerticalScrollMode="Disabled"
										  VerticalScrollBarVisibility="Hidden">

								<chips:ChipGroup ItemsSource="{Binding Data.TestCollection}"
												 Style="{StaticResource MaterialFilledFilterChipGroupStyle}"
												 Margin="8,0,8,8">

									<chips:ChipGroup.ItemTemplate>
										<DataTemplate>
											<TextBlock Style="{StaticResource MaterialBody1}">
												<Run Text="Item #" /><Run Text="{Binding Index}" />
											</TextBlock>
										</DataTemplate>
									</chips:ChipGroup.ItemTemplate>
								</chips:ChipGroup>
							</ScrollViewer>
						</smtx:XamlDisplay>
						<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipGroup_FliterOutlined"
										  Style="{StaticResource XamlDisplayBelowStyle}">

							<ScrollViewer HorizontalScrollMode="Auto"
										  HorizontalScrollBarVisibility="Auto"
										  VerticalScrollMode="Disabled"
										  VerticalScrollBarVisibility="Hidden">

								<chips:ChipGroup ItemsSource="{Binding Data.TestCollection}"
												 Style="{StaticResource MaterialOutlinedFilterChipGroupStyle}"
												 Margin="8,0,8,8">

									<chips:ChipGroup.IconTemplate>
										<DataTemplate>
											<Border Background="{StaticResource MaterialSecondaryBrush}" />
										</DataTemplate>
									</chips:ChipGroup.IconTemplate>

									<chips:ChipGroup.ItemTemplate>
										<DataTemplate>
											<TextBlock Style="{StaticResource MaterialBody1}">
												<Run Text="Item #" /><Run Text="{Binding Index}" />
											</TextBlock>
										</DataTemplate>
									</chips:ChipGroup.ItemTemplate>
								</chips:ChipGroup>
							</ScrollViewer>
						</smtx:XamlDisplay>


						<!-- ChipGroup Action -->
						<TextBlock Text="Action"
								   Style="{StaticResource MaterialSubtitle1}" />
						<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipGroup_Action"
										  Style="{StaticResource XamlDisplayBelowStyle}">

							<ScrollViewer HorizontalScrollMode="Auto"
										  HorizontalScrollBarVisibility="Auto"
										  VerticalScrollMode="Disabled"
										  VerticalScrollBarVisibility="Hidden">

								<chips:ChipGroup ItemsSource="{Binding Data.MutableTestCollection}"
												 ItemRemoved="RemoveChipItem"
												 Style="{StaticResource MaterialFilledActionChipGroupStyle}"
												 Margin="8,0,8,8">
									<chips:ChipGroup.IconTemplate>
										<DataTemplate>
