									<chips:Chip Content="Disabled"
												Style="{StaticResource MaterialOutlinedChoiceChipStyle}"
												IsEnabled="False">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipOutlinedChoice_Selected"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Selected"
												IsChecked="True"
												Style="{StaticResource MaterialOutlinedChoiceChipStyle}">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>
							</StackPanel>
						</ScrollViewer>

						<!-- MaterialFilledFilterChipStyle -->
						<TextBlock Text="Filter - Filled"
								   Style="{StaticResource MaterialSubtitle1}" />
						<ScrollViewer>
							<StackPanel Orientation="Horizontal"
										Spacing="8">
								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipFilledFilter_Enabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Enabled"
												Style="{StaticResource MaterialFilledFilterChipStyle}">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipFilledFilter_Disabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Disabled"
												Style="{StaticResource MaterialFilledFilterChipStyle}"
												IsEnabled="False">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipFilledFilter_Selected"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Selected"
												IsChecked="True"
												Style="{StaticResource MaterialFilledFilterChipStyle}" />
								</smtx:XamlDisplay>
							</StackPanel>
						</ScrollViewer>

						<!-- MaterialOutlinedFilterChipStyle -->
						<TextBlock Text="Filter - Outlined"
								   Style="{StaticResource MaterialSubtitle1}" />
						<ScrollViewer>
							<StackPanel Orientation="Horizontal"
										Spacing="8">
								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipOutlinedFilter_Enabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Enabled"
												Style="{StaticResource MaterialOutlinedFilterChipStyle}">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipOutlinedFilter_Disabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<chips:Chip Content="Disabled"
												Style="{StaticResource MaterialOutlinedFilterChipStyle}"
												IsEnabled="False">
										<chips:Chip.Icon>
											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
