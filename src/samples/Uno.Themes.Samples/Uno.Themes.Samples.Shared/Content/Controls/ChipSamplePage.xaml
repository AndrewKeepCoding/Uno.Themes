											<Image Source="ms-appx:///Assets/Cards/Avatar.png" />
										</chips:Chip.Icon>
									</chips:Chip>
								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipOutlinedChoice_Disabled"
