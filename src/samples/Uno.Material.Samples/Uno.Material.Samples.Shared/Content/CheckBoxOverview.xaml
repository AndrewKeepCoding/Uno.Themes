<UserControl x:Class="Uno.Material.Samples.Content.CheckBoxOverview"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d">

	<StackPanel BorderBrush="{StaticResource Color04Brush}"
				BorderThickness="1"
				Margin="12">
		<TextBlock Text="CHECKBOXES"
				   FontSize="20"
				   FontWeight="Bold"
				   Foreground="{StaticResource PrimaryColor01Brush}"
				   Margin="12" />

		<CheckBox Content="DEFAULT"
				  Style="{StaticResource MaterialCheckBoxStyle}"
				  Margin="12" />

		<CheckBox Content="DEFAULT CHECKED"
				  Style="{StaticResource MaterialCheckBoxStyle}"
				  IsChecked="True"
				  Margin="12" />

		<CheckBox Content="DEFAULT DISABLED"
				  IsEnabled="False"
				  Style="{StaticResource MaterialCheckBoxStyle}"
				  Margin="12" />

		<CheckBox Content="DEFAULT INDETERMINATE"
				  IsChecked="{x:Null}"
				  Style="{StaticResource MaterialCheckBoxStyle}"
				  Margin="12" />

		<CheckBox Content="DEFAULT INDETERMINATE DISABLED"
				  IsEnabled="False"
				  IsChecked="{x:Null}"
				  Style="{StaticResource MaterialCheckBoxStyle}"
				  Margin="12" />
	</StackPanel>
	
</UserControl>
