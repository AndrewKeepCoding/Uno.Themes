<Page x:Class="Uno.Material.Samples.Content.Controls.FabSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:not_win="http://uno.ui/not_win"
	  xmlns:ios="http://uno.ui/ios"
	  xmlns:android="http://uno.ui/android"
	  xmlns:wasm="http://uno.ui/wasm"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:smtx="using:ShowMeTheXAML"
	  mc:Ignorable="not_win android ios wasm">

	<StackPanel BorderBrush="{StaticResource MaterialOnSurfaceBrush}"
				BorderThickness="1"
				Margin="12"
				Padding="12">

		<!-- Floating Acion Buttons Text -->
		<TextBlock Text="FLOATING ACTION BUTTONS"
				   FontSize="20"
				   FontWeight="Bold"
				   Foreground="{StaticResource MaterialPrimaryBrush}" />

		<!-- Fab With Icon -->
		<smtx:XamlDisplay UniqueKey="FabSamplePage_IconFab">
			<!-- Known Issue, ElevatedView adds white border around fab in WASM -->
			<Button Style="{StaticResource FabMaterialButtonStyle}">
				<Path Data="M19 13 13 13 13 19 11 19 11 13 5 13 5 11 11 11 11 5 13 5 13 11 19 11z"
					  Fill="{StaticResource FabIconColor}"
					  HorizontalAlignment="Center"
					  VerticalAlignment="Center"
					  win:Margin="0,0,6,4"
					  not_win:Margin="0,0,4,4" />
			</Button>
		</smtx:XamlDisplay>

		<!-- Fab With Icon And Label -->
		<smtx:XamlDisplay UniqueKey="FabSamplePage_IconTextFab">
			<Button Style="{StaticResource FabLabelMaterialButtonStyle}">
				<StackPanel Orientation="Horizontal">
					<Path Data="M19 13 13 13 13 19 11 19 11 13 5 13 5 11 11 11 11 5 13 5 13 11 19 11z"
						  Fill="{StaticResource FabIconColor}"
						  HorizontalAlignment="Center"
						  VerticalAlignment="Center"
						  win:Margin="12,0,16,3"
						  not_win:Margin="12,1,16,3" />
					<TextBlock Text="CREATE"
							   Foreground="{StaticResource FabLabelColor}"
							   FontWeight="SemiBold"
							   win:Margin="0,4,16,0"
							   wasm:Margin="0,4,16,0"
							   ios:Margin="0,4,16,0"
							   android:Margin="0,3,16,0" />
				</StackPanel>
			</Button>
		</smtx:XamlDisplay>

	</StackPanel>
</Page>
