<Page x:Class="Uno.Material.Samples.Content.Controls.FabSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:not_win="http://uno.ui/not_win"
	  xmlns:ios="http://uno.ui/ios"
	  xmlns:android="http://uno.ui/android"
	  xmlns:wasm="http://uno.ui/wasm"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="not_win android ios wasm">

	<StackPanel BorderBrush="{StaticResource OnSurfaceBrush}"
				BorderThickness="1"
				Margin="12">

		<!-- Floating Acion Buttons Text -->
		<TextBlock Text="FLOATING ACTION BUTTONS"
				   FontSize="20"
				   FontWeight="Bold"
				   Foreground="{StaticResource PrimaryBrush}"
				   Margin="12" />

		<StackPanel Orientation="Horizontal">

			<!-- Fab With Icon -->
			<!--Known Issue, ElevatedView adds white border around fab in WASM-->
			<Button Style="{StaticResource FabMaterialButtonStyle}"
					Margin="12">
				<Path Data="M19 13 13 13 13 19 11 19 11 13 5 13 5 11 11 11 11 5 13 5 13 11 19 11z"
					  Fill="Black"
					  HorizontalAlignment="Center"
					  VerticalAlignment="Center"
					  win:Margin="0,0,6,4"
					  not_win:Margin="0,0,4,4" />
			</Button>

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}">
				<StackPanel>
					<Image Source="ms-appx:///Assets/FAB/FAB.png"
						   HorizontalAlignment="Left" />
				</StackPanel>
			</Button>
		</StackPanel>

		<StackPanel Orientation="Horizontal">

			<!-- Fab With Icon And Label -->
			<Button Style="{StaticResource FabLabelMaterialButtonStyle}"
					Margin="12">
				<StackPanel Orientation="Horizontal">
					<Path Data="M19 13 13 13 13 19 11 19 11 13 5 13 5 11 11 11 11 5 13 5 13 11 19 11z"
						  Fill="Black"
						  HorizontalAlignment="Center"
						  VerticalAlignment="Center"
						  win:Margin="12,0,16,3"
						  not_win:Margin="12,1,16,3" />

					<TextBlock Text="CREATE"
							   FontWeight="SemiBold"
							   win:Margin="0,4,16,0"
							   wasm:Margin="0,4,16,0"
							   ios:Margin="0,4,16,0"
							   android:Margin="0,3,16,0" />
				</StackPanel>
			</Button>

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}">
				<StackPanel>
					<Image Source="ms-appx:///Assets/FAB/FAB_Label.png"
						   HorizontalAlignment="Left" />
				</StackPanel>
			</Button>
		</StackPanel>
	</StackPanel>
</Page>
