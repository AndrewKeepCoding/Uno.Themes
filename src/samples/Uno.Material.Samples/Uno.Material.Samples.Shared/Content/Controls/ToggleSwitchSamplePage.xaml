<Page x:Class="Uno.Material.Samples.Content.Controls.ToggleSwitchSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Material.Samples.Shared.Content"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">
	<StackPanel BorderBrush="{StaticResource Color04Brush}"
				BorderThickness="1"
				Margin="12">
		<TextBlock Text="TOGGLESWITCHES"
				   FontSize="20"
				   FontWeight="Bold"
				   Foreground="{StaticResource PrimaryColor01Brush}"
				   Margin="12" />

		<TextBlock Text="Default"
				   Margin="12,0" />

		<ToggleSwitch Style="{StaticResource MaterialToggleSwitchStyle}"
					  Margin="12" />

		<TextBlock Text="Default On"
				   Margin="12,0" />

		<ToggleSwitch Style="{StaticResource MaterialToggleSwitchStyle}"
					  IsOn="True"
					  Margin="12" />

		<TextBlock Text="Disabled"
				   Margin="12,0" />

		<ToggleSwitch IsEnabled="False"
					  Style="{StaticResource MaterialToggleSwitchStyle}"
					  Margin="12" />

		<TextBlock Text="On Disabled"
				   Margin="12,0" />

		<ToggleSwitch IsEnabled="False"
					  IsOn="True"
					  Style="{StaticResource MaterialToggleSwitchStyle}"
					  Margin="12" />
	</StackPanel>
</Page>
