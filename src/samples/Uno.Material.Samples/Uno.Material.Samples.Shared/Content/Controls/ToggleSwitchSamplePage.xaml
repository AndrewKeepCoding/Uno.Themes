<Page x:Class="Uno.Material.Samples.Content.Controls.ToggleSwitchSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Material.Samples.Shared.Content"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">
	<StackPanel BorderBrush="{StaticResource Color04Brush}"
				BorderThickness="1"
				Margin="12">
		<TextBlock Text="TOGGLESWITCHES"
				   FontSize="20"
				   FontWeight="Bold"
				   Foreground="{StaticResource PrimaryColor01Brush}"
				   Margin="12" />

		<StackPanel Orientation="Horizontal">
			<ToggleSwitch Header="DEFAULT"
						  Style="{StaticResource MaterialToggleSwitchStyle}"
						  Margin="12" />

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}"
					VerticalAlignment="Center">
				<StackPanel>
					<Image Source="ms-appx:///Assets/ToggleSwitch/ToggleSwitch.png"
						   HorizontalAlignment="Left" />
				</StackPanel>
			</Button>
		</StackPanel>

		<StackPanel Orientation="Horizontal">

			<ToggleSwitch Header="DEFAULT ON"
						  IsOn="True"
						  Style="{StaticResource MaterialToggleSwitchStyle}"
						  Margin="12" />

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}"
					VerticalAlignment="Center">
				<StackPanel>
					<Image Source="ms-appx:///Assets/ToggleSwitch/ToggleSwitch_On.png"
						   HorizontalAlignment="Left" />
				</StackPanel>
			</Button>
		</StackPanel>

		<StackPanel Orientation="Horizontal">

			<ToggleSwitch Header="DISABLED"
						  IsEnabled="False"
						  Style="{StaticResource MaterialToggleSwitchStyle}"
						  Margin="12" />

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}"
					VerticalAlignment="Center">
				<StackPanel>
					<Image Source="ms-appx:///Assets/ToggleSwitch/ToggleSwitch_Disabled.png"
						   HorizontalAlignment="Left" />
				</StackPanel>
			</Button>
		</StackPanel>

		<StackPanel Orientation="Horizontal">

			<ToggleSwitch Header="ON DISABLED"
						  IsEnabled="False"
						  IsOn="True"
						  Style="{StaticResource MaterialToggleSwitchStyle}"
						  Margin="12" />

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}"
					VerticalAlignment="Center">
				<StackPanel>
					<Image Source="ms-appx:///Assets/ToggleSwitch/ToggleSwitch_Disabled_On.png"
						   HorizontalAlignment="Left" />
				</StackPanel>
			</Button>
		</StackPanel>
	</StackPanel>
</Page>
