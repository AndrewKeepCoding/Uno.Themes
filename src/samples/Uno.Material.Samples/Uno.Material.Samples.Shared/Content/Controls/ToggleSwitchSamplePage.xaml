<Page x:Class="Uno.Material.Samples.Content.Controls.ToggleSwitchSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Material.Samples.Shared.Content"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">
	<StackPanel BorderBrush="{StaticResource Color04Brush}"
				BorderThickness="1"
				Margin="12">
		<TextBlock Text="TOGGLESWITCHES"
				   FontSize="20"
				   FontWeight="Bold"
				   Foreground="{StaticResource PrimaryColor01Brush}"
				   Margin="12" />

		<StackPanel Orientation="Horizontal">
			<ToggleSwitch Header="DEFAULT"
						  Style="{StaticResource MaterialToggleSwitchStyle}"
						  Margin="12" />

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}"
					VerticalAlignment="Center">
				<StackPanel>
					<TextBlock Text="ToggleSwitch"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Header='DEFAULT'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Style='{StaticResource MaterialToggleSwitchStyle}'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Margin='12'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />
				</StackPanel>
			</Button>
		</StackPanel>

		<StackPanel Orientation="Horizontal">

			<ToggleSwitch Header="DEFAULT ON"
						  IsOn="True"
						  Style="{StaticResource MaterialToggleSwitchStyle}"
						  Margin="12" />

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}"
					VerticalAlignment="Center">
				<StackPanel>
					<TextBlock Text="ToggleSwitch"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Header='DEFAULT ON'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="IsOn='True'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Style='{StaticResource MaterialToggleSwitchStyle}'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Margin='12'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />
				</StackPanel>
			</Button>
		</StackPanel>

		<StackPanel Orientation="Horizontal">

			<ToggleSwitch Header="DISABLED"
						  IsEnabled="False"
						  Style="{StaticResource MaterialToggleSwitchStyle}"
						  Margin="12" />

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}"
					VerticalAlignment="Center">
				<StackPanel>
					<TextBlock Text="ToggleSwitch"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Header='DISABLED'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="IsEnabled='False'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Style='{StaticResource MaterialToggleSwitchStyle}'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Margin='12'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />
				</StackPanel>
			</Button>
		</StackPanel>

		<StackPanel Orientation="Horizontal">

			<ToggleSwitch Header="ON DISABLED"
						  IsEnabled="False"
						  IsOn="True"
						  Style="{StaticResource MaterialToggleSwitchStyle}"
						  Margin="12" />

			<Button Style="{StaticResource SeeStyleFlyoutButtonStyle}"
					VerticalAlignment="Center">
				<StackPanel>
					<TextBlock Text="ToggleSwitch"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Header='ON DISABLED'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="IsEnabled='False'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="IsOn='True'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Style='{StaticResource MaterialToggleSwitchStyle}'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />

					<TextBlock Text="Margin='12'"
							   Foreground="{StaticResource PrimaryBrush}"
							   FontSize="14" />
				</StackPanel>
			</Button>
		</StackPanel>
	</StackPanel>
</Page>
