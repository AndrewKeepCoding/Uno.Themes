<Page x:Class="Uno.Material.Samples.Content.Controls.HyperlinkButtonSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Material.Samples.Shared.Content"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:android="http://uno.ui/android"
	  xmlns:ios="http://uno.ui/ios"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:smtx="using:ShowMeTheXAML"
	  mc:Ignorable="d android ios">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<StackPanel BorderBrush="{StaticResource MaterialOnSurfaceBrush}"
					BorderThickness="1"
					android:Margin="12"
					ios:Margin="12"
					Padding="12">

			<!-- Primary -->
			<TextBlock Text="Primary"
					   Style="{StaticResource MaterialSubtitle2}"
					   Margin="12,16,12,4" />

			<!-- Slider Vertical -->
			<smtx:XamlDisplay UniqueKey="SliderSamplePage_Default">

				<HyperlinkButton Content="Uno Platform"
								 NavigateUri="https://platform.uno/"
								 Style="{StaticResource MaterialHyperlinkButtonStyle}"
								 Margin="12,0" />
			</smtx:XamlDisplay>

			<!-- Secondary -->
			<TextBlock Text="Secondary"
					   Style="{StaticResource MaterialSubtitle2}"
					   Margin="12,16,12,4" />

			<!-- Slider Vertical -->
			<smtx:XamlDisplay UniqueKey="SliderSamplePage_Secondary">

				<HyperlinkButton Content="Uno Platform"
								 NavigateUri="https://platform.uno/"
								 Style="{StaticResource MaterialSecondaryHyperlinkButtonStyle}"
								 Margin="12,0" />
			</smtx:XamlDisplay>
		</StackPanel>
	</ScrollViewer>
</Page>
