<Page x:Class="Uno.Material.Samples.Content.Controls.ButtonSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Material.Samples.Shared.Content"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">

	<StackPanel BorderBrush="{StaticResource Color04Brush}"
				BorderThickness="1"
				Margin="12">
		<TextBlock Text="BUTTONS"
				   FontSize="20"
				   FontWeight="Bold"
				   Foreground="{StaticResource PrimaryColor01Brush}"
				   Margin="12" />

		<Button Content="CONTAINED"
				Style="{StaticResource ContainedMaterialButtonStyle}"
				Margin="12" />

		<Button Content="CONTAINED DISABLED"
				IsEnabled="False"
				Style="{StaticResource ContainedMaterialButtonStyle}"
				Margin="12" />

		<Button Content="OUTLINED"
				Style="{StaticResource OutlinedMaterialButtonStyle}"
				Margin="12" />

		<Button Content="OUTLINED DISABLED"
				IsEnabled="False"
				Style="{StaticResource OutlinedMaterialButtonStyle}"
				Margin="12" />

		<Button Content="TEXT"
				Style="{StaticResource TextMaterialButtonStyle}"
				Margin="12" />

		<Button Content="TEXT DISABLED"
				IsEnabled="False"
				Style="{StaticResource TextMaterialButtonStyle}"
				Margin="12" />
	</StackPanel>
</Page>
