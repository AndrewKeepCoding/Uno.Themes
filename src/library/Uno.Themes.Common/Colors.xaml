<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					x:Class="Uno.Themes.Common.Colors">

    <!--  Primary  -->
    <SolidColorBrush x:Key="PrimaryBrush"
                     Color="{ThemeResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryInverseBrush"
                     Color="{ThemeResource PrimaryInverseColor}" />
    <SolidColorBrush x:Key="OnPrimaryBrush"
                     Color="{ThemeResource OnPrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryContainerBrush"
                     Color="{ThemeResource PrimaryContainerColor}" />
    <SolidColorBrush x:Key="OnPrimaryContainerBrush"
                     Color="{ThemeResource OnPrimaryContainerColor}" />

    <!--  Secondary  -->
    <SolidColorBrush x:Key="SecondaryBrush"
                     Color="{ThemeResource SecondaryColor}" />
    <SolidColorBrush x:Key="OnSecondaryBrush"
                     Color="{ThemeResource OnSecondaryColor}" />
    <SolidColorBrush x:Key="SecondaryContainerBrush"
                     Color="{ThemeResource SecondaryContainerColor}" />
    <SolidColorBrush x:Key="OnSecondaryContainerBrush"
                     Color="{ThemeResource OnSecondaryContainerColor}" />

    <!--  Tertiary  -->
    <SolidColorBrush x:Key="TertiaryBrush"
                     Color="{ThemeResource TertiaryColor}" />
    <SolidColorBrush x:Key="OnTertiaryBrush"
                     Color="{ThemeResource OnTertiaryColor}" />
    <SolidColorBrush x:Key="TertiaryContainerBrush"
                     Color="{ThemeResource TertiaryContainerColor}" />
    <SolidColorBrush x:Key="OnTertiaryContainerBrush"
                     Color="{ThemeResource OnTertiaryContainerColor}" />

    <!--  Error  -->
    <SolidColorBrush x:Key="ErrorBrush"
                     Color="{ThemeResource ErrorColor}" />
    <SolidColorBrush x:Key="OnErrorBrush"
                     Color="{ThemeResource OnErrorColor}" />
    <SolidColorBrush x:Key="ErrorContainerBrush"
                     Color="{ThemeResource ErrorContainerColor}" />
    <SolidColorBrush x:Key="OnErrorContainerBrush"
                     Color="{ThemeResource OnErrorContainerColor}" />

    <!--  Background  -->
    <SolidColorBrush x:Key="BackgroundBrush"
                     Color="{ThemeResource BackgroundColor}" />
    <SolidColorBrush x:Key="OnBackgroundBrush"
                     Color="{ThemeResource OnBackgroundColor}" />

    <!--  Surface  -->
    <SolidColorBrush x:Key="SurfaceBrush"
                     Color="{ThemeResource SurfaceColor}" />
    <SolidColorBrush x:Key="OnSurfaceBrush"
                     Color="{ThemeResource OnSurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceInverseBrush"
                     Color="{ThemeResource SurfaceInverseColor}" />
    <SolidColorBrush x:Key="OnSurfaceInverseBrush"
                     Color="{ThemeResource OnSurfaceInverseColor}" />

    <!--  SurfaceVariant  -->
    <SolidColorBrush x:Key="SurfaceVariantBrush"
                     Color="{ThemeResource SurfaceVariantColor}" />
    <SolidColorBrush x:Key="OnSurfaceVariantBrush"
                     Color="{ThemeResource OnSurfaceVariantColor}" />

    <!--  Outline  -->
    <SolidColorBrush x:Key="OutlineBrush"
                     Color="{ThemeResource OutlineColor}" />

</ResourceDictionary>
