<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!--
		This palette contains the default colors and opacity levels for the different state overlays
		All of them can be overriden by the application consuming this library

		All variations of this palette are offered as brushes in Colors.xaml.
	-->

	<!-- Color source https://developer.apple.com/design/human-interface-guidelines/ios/visual-design/color/ -->
	<ResourceDictionary.ThemeDictionaries>

		<!-- Light Theme -->
		<ResourceDictionary x:Key="Light">
			<!-- Primary -->
			<Color x:Key="PrimaryColor">#B6A8FB</Color>
			<Color x:Key="PrimaryInverseColor">#B6A8FB</Color>
			<Color x:Key="OnPrimaryColor">#353FE5</Color>
			<Color x:Key="PrimaryContainerColor">#D4CBFC</Color>
			<Color x:Key="OnPrimaryContainerColor">#353FE5</Color>

			<!-- Secondary -->
			<Color x:Key="SecondaryColor">#B6A8FB</Color>
			<Color x:Key="OnSecondaryColor">#353FE5</Color>
			<Color x:Key="SecondaryContainerColor">#D4CBFC</Color>
			<Color x:Key="OnSecondaryContainerColor">#353FE5</Color>

			<!-- Tertiary -->
			<Color x:Key="TertiaryColor">#B6A8FB</Color>
			<Color x:Key="OnTertiaryColor">#353FE5</Color>
			<Color x:Key="TertiaryContainerColor">#D4CBFC</Color>
			<Color x:Key="OnTertiaryContainerColor">#353FE5</Color>

			<!-- Error -->
			<Color x:Key="ErrorColor">#B6A8FB</Color>
			<Color x:Key="OnErrorColor">#353FE5</Color>
			<Color x:Key="ErrorContainerColor">#D4CBFC</Color>
			<Color x:Key="OnErrorContainerColor">#353FE5</Color>

			<!-- Background -->
			<Color x:Key="BackgroundColor">#121212</Color>
			<Color x:Key="OnBackgroundColor">#FFFFFF</Color>

			<!-- Surface -->
			<Color x:Key="SurfaceColor">#121212</Color>
			<Color x:Key="OnSurfaceColor">#DEFFFFFF</Color>
			<Color x:Key="SurfaceVariantColor">#121212</Color>
			<Color x:Key="OnSurfaceVariantColor">#DEFFFFFF</Color>
			<Color x:Key="SurfaceInverseColor">#121212</Color>
			<Color x:Key="OnSurfaceInverseColor">#DEFFFFFF</Color>
			
			<!-- Outline -->
			<Color x:Key="OutlineColor">#DEFFFFFF</Color>
		</ResourceDictionary>

		<!-- Dark Theme -->
		<ResourceDictionary x:Key="Dark">
			<!-- Primary -->
			<Color x:Key="PrimaryColor">#B6A8FB</Color>
			<Color x:Key="OnPrimaryColor">#353FE5</Color>
			<Color x:Key="PrimaryContainerColor">#D4CBFC</Color>
			<Color x:Key="OnPrimaryContainerColor">#353FE5</Color>
			<Color x:Key="PrimaryInverseColor">#B6A8FB</Color>

			<!-- Secondary -->
			<Color x:Key="SecondaryColor">#B6A8FB</Color>
			<Color x:Key="OnSecondaryColor">#353FE5</Color>
			<Color x:Key="SecondaryContainerColor">#D4CBFC</Color>
			<Color x:Key="OnSecondaryContainerColor">#353FE5</Color>

			<!-- Tertiary -->
			<Color x:Key="TertiaryColor">#B6A8FB</Color>
			<Color x:Key="OnTertiaryColor">#353FE5</Color>
			<Color x:Key="TertiaryContainerColor">#D4CBFC</Color>
			<Color x:Key="OnTertiaryContainerColor">#353FE5</Color>

			<!-- Error -->
			<Color x:Key="ErrorColor">#B6A8FB</Color>
			<Color x:Key="OnErrorColor">#353FE5</Color>
			<Color x:Key="ErrorContainerColor">#D4CBFC</Color>
			<Color x:Key="OnErrorContainerColor">#353FE5</Color>

			<!-- Background -->
			<Color x:Key="BackgroundColor">#121212</Color>
			<Color x:Key="OnBackgroundColor">#FFFFFF</Color>

			<!-- Surface -->
			<Color x:Key="SurfaceColor">#121212</Color>
			<Color x:Key="OnSurfaceColor">#DEFFFFFF</Color>
			<Color x:Key="SurfaceVariantColor">#121212</Color>
			<Color x:Key="OnSurfaceVariantColor">#DEFFFFFF</Color>
			<Color x:Key="SurfaceInverseColor">#121212</Color>
			<Color x:Key="OnSurfaceInverseColor">#DEFFFFFF</Color>

			<!-- Outline -->
			<Color x:Key="OutlineColor">#DEFFFFFF</Color>
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>
	
	<!-- Opacity for control state overlays -->
	<x:Double x:Key="HoverOpacity">0.08</x:Double>
	<x:Double x:Key="FocusedOpacity">0.12</x:Double>
	<x:Double x:Key="PressedOpacity">0.12</x:Double>
	<x:Double x:Key="DraggedOpacity">0.16</x:Double>
</ResourceDictionary>
