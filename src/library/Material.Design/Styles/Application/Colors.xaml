<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- https://material.io/design/color/the-color-system.html#color-theme-creation -->
	
	<Color x:Key="Color01">#FFFFFF</Color>
	<Color x:Key="Color02">#000000</Color>
	<Color x:Key="Color03">#E1E1E1</Color>
	<Color x:Key="Color04">#A19FA7</Color>
	<Color x:Key="Color05">#B00020</Color>

	<Color x:Key="PrimaryColor01">#6200EE</Color>
	<Color x:Key="PrimaryColor02">#3700B3</Color>
	<Color x:Key="SecondaryColor01">#03DAC6</Color>
	<Color x:Key="SecondaryColor02">#018786</Color>

	<SolidColorBrush x:Key="Color01Brush"
					 Color="{StaticResource Color01}" />
	<SolidColorBrush x:Key="Color02Brush"
					 Color="{StaticResource Color02}" />
	<SolidColorBrush x:Key="Color03Brush"
					 Color="{StaticResource Color03}" />
	<SolidColorBrush x:Key="Color04Brush"
					 Color="{StaticResource Color04}" />
	<SolidColorBrush x:Key="Color05Brush"
					 Color="{StaticResource Color05}" />
	
	<SolidColorBrush x:Key="PrimaryColor01Brush"
					 Color="{StaticResource PrimaryColor01}" />
	<SolidColorBrush x:Key="PrimaryColor02Brush"
					 Color="{StaticResource PrimaryColor02}" />
	
	<SolidColorBrush x:Key="SecondaryColor01Brush"
					 Color="{StaticResource SecondaryColor01}" />
	<SolidColorBrush x:Key="SecondaryColor02Brush"
					 Color="{StaticResource SecondaryColor02}" />

	<SolidColorBrush x:Key="TransparentBrush"
					 Color="Transparent" />

</ResourceDictionary>