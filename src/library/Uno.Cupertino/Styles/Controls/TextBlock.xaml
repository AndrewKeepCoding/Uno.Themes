<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="ms-appx:///Styles/Application/Fonts.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<!-- Based on https://developer.apple.com/design/human-interface-guidelines/ios/visual-design/typography/#dynamic-type-sizes default style -->
	<Style x:Key="CupertinoBaseTextBlockStyle"
		   TargetType="TextBlock">
		<Setter Property="TextTrimming"
				Value="CharacterEllipsis" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="FontFamily"
				Value="{StaticResource SFProFontFamily}" />
	</Style>

	<!--
	******************************************************************
		STYLE GUIDE TEXTBLOCKS STYLES
	******************************************************************
	-->

	<!-- Large Title -->
	<Style x:Key="LargeTitleTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="45" />
		<Setter Property="LineHeight"
				Value="55" />
	</Style>

	<!-- Title 1 -->
	<Style x:Key="PrimaryTitleTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="37" />
		<Setter Property="LineHeight"
				Value="45" />
	</Style>

	<!-- Title 2 -->
	<Style x:Key="SecondaryTitleTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="30" />
		<Setter Property="LineHeight"
				Value="37" />
	</Style>

	<!-- Title 3 -->
	<Style x:Key="TertiaryTitleTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="27" />
		<Setter Property="LineHeight"
				Value="34" />
	</Style>

	<!-- Headline -->
	<Style x:Key="HeadlineTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="22" />
		<Setter Property="FontWeight"
				Value="SemiBold" />
		<Setter Property="LineHeight"
				Value="30" />
	</Style>

	<!-- Body -->
	<Style x:Key="BodyTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="22" />
		<Setter Property="LineHeight"
				Value="30" />
	</Style>

	<!-- Callout -->
	<Style x:Key="CalloutTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="21" />
		<Setter Property="LineHeight"
				Value="28" />
	</Style>

	<!-- Subhead -->
	<Style x:Key="SubheadTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="20" />
		<Setter Property="LineHeight"
				Value="27" />
	</Style>

	<!-- Footnote -->
	<Style x:Key="FootnoteTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="17" />
		<Setter Property="LineHeight"
				Value="24" />
	</Style>

	<!-- Caption 1 -->
	<Style x:Key="PrimaryCaptionTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="16" />
		<Setter Property="LineHeight"
				Value="21" />
	</Style>

	<!-- Caption 2 -->
	<Style x:Key="SecondaryCaptionTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource CupertinoBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="15" />
		<Setter Property="LineHeight"
				Value="17" />
	</Style>

</ResourceDictionary>
