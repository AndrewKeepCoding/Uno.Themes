<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- 
	
	For more information on the color system, consult these pages
	https://developer.apple.com/design/human-interface-guidelines/ios/visual-design/color/
	https://developer.apple.com/design/human-interface-guidelines/ios/visual-design/dark-mode/
	
	-->

	<!-- Basic colors -->
	<SolidColorBrush x:Key="CupertinoBlueBrush"
					 Color="{ThemeResource CupertinoBlueColor}" />
	<SolidColorBrush x:Key="CupertinoGreenBrush"
					 Color="{ThemeResource CupertinoGreenColor}" />
	<SolidColorBrush x:Key="CupertinoIndigoBrush"
					 Color="{ThemeResource CupertinoIndigoColor}" />
	<SolidColorBrush x:Key="CupertinoOrangeBrush"
					 Color="{ThemeResource CupertinoOrangeColor}" />
	<SolidColorBrush x:Key="CupertinoPinkBrush"
					 Color="{ThemeResource CupertinoPinkColor}" />
	<SolidColorBrush x:Key="CupertinoPurpleBrush"
					 Color="{ThemeResource CupertinoPurpleColor}" />
	<SolidColorBrush x:Key="CupertinoRedBrush"
					 Color="{ThemeResource CupertinoRedColor}" />
	<SolidColorBrush x:Key="CupertinoTealBrush"
					 Color="{ThemeResource CupertinoTealColor}" />
	<SolidColorBrush x:Key="CupertinoYellowBrush"
					 Color="{ThemeResource CupertinoYellowColor}" />
	<SolidColorBrush x:Key="CupertinoWhiteBrush"
					 Color="{ThemeResource CupertinoWhiteColor}" />

	<!-- Types of gray colors -->
	<SolidColorBrush x:Key="CupertinoPrimaryGrayBrush"
					 Color="{ThemeResource CupertinoPrimaryGrayColor}" />
	<SolidColorBrush x:Key="CupertinoSecondaryGrayBrush"
					 Color="{ThemeResource CupertinoSecondaryGrayColor}" />
	<SolidColorBrush x:Key="CupertinoTertiaryGrayBrush"
					 Color="{ThemeResource CupertinoTertiaryGrayColor}" />
	<SolidColorBrush x:Key="CupertinoQuaternaryGrayBrush"
					 Color="{ThemeResource CupertinoQuaternaryGrayColor}" />
	<SolidColorBrush x:Key="CupertinoQuinaryGrayBrush"
					 Color="{ThemeResource CupertinoQuinaryGrayColor}" />
	<SolidColorBrush x:Key="CupertinoSenaryGrayBrush"
					 Color="{ThemeResource CupertinoSenaryGrayColor}" />

	<!-- Controls colors -->
	<SolidColorBrush x:Key="CupertinoLabelBrush"
					 Color="{ThemeResource LabelColor}" />
	<SolidColorBrush x:Key="CupertinoSecondaryLabelBrush"
					 Color="{ThemeResource SecondaryLabelColor}" />
	<SolidColorBrush x:Key="CupertinoTertiaryLabelBrush"
					 Color="{ThemeResource TertiaryLabelColor}" />
	<SolidColorBrush x:Key="CupertinoQuaternaryLabelBrush"
					 Color="{ThemeResource QuaternaryLabelColor}" />
	<SolidColorBrush x:Key="CupertinoSystemFillBrush"
					 Color="{ThemeResource SystemFillColor}" />
	<SolidColorBrush x:Key="CupertinoSecondarySystemFillBrush"
					 Color="{ThemeResource SecondarySystemFillColor}" />
	<SolidColorBrush x:Key="CupertinoTertiarySystemFillBrush"
					 Color="{ThemeResource TertiarySystemFillColor}" />
	<SolidColorBrush x:Key="CupertinoQuaternarySystemFillBrush"
					 Color="{ThemeResource QuaternarySystemFillColor}" />
	<SolidColorBrush x:Key="CupertinoPlaceholderTextBrush"
					 Color="{ThemeResource PlaceholderTextColor}" />
	<SolidColorBrush x:Key="CupertinoSystemBackgroundBrush"
					 Color="{ThemeResource SystemBackgroundColor}" />
	<SolidColorBrush x:Key="CupertinoSecondarySystemBackgroundBrush"
					 Color="{ThemeResource SecondarySystemBackgroundColor}" />
	<SolidColorBrush x:Key="CupertinoTertiarySystemBackgroundBrush"
					 Color="{ThemeResource TertiarySystemBackgroundColor}" />
	<SolidColorBrush x:Key="CupertinoSystemGroupedBackgroundBrush"
					 Color="{ThemeResource SystemGroupedBackgroundColor}" />
	<SolidColorBrush x:Key="CupertinoSecondarySystemGroupedBackgroundBrush"
					 Color="{ThemeResource SecondarySystemGroupedBackgroundColor}" />
	<SolidColorBrush x:Key="CupertinoTertiarySystemGroupedBackgroundBrush"
					 Color="{ThemeResource TertiarySystemGroupedBackgroundColor}" />
	<SolidColorBrush x:Key="CupertinoSeparatorBrush"
					 Color="{ThemeResource SeparatorColor}" />
	<SolidColorBrush x:Key="CupertinoOpaqueSeparatorBrush"
					 Color="{ThemeResource OpaqueSeparatorColor}" />
	<SolidColorBrush x:Key="CupertinoLinkBrush"
					 Color="{ThemeResource LinkColor}" />

</ResourceDictionary>
