<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="using:Uno.Material.Controls">

	<Style x:Key="DefaultCardStyle"
		   TargetType="controls:Card">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:Card">
					<Grid>
						<StackPanel>

						</StackPanel>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="controls:Card"
		   BasedOn="{StaticResource DefaultCardStyle}" />

</ResourceDictionary>
