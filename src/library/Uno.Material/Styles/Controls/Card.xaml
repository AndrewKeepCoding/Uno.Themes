		<Setter Property="HorizontalAlignment"
				Value="Stretch" />
		<Setter Property="HorizontalContentAlignment"
				Value="Stretch" />
		
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:Card">
