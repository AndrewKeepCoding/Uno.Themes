<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:ctl="using:Uno.Material.Controls">

	<StaticResource x:Key="BottomNavBackgroundColorBrush" ResourceKey="PrimaryBrush" />

	<Style x:Key="DefaultBottomNavigationBarStyle"
		   TargetType="ctl:BottomNavigationBar">
		<Setter Property="Height"
				Value="64" />
		<Setter Property="VerticalAlignment"
				Value="Bottom" />
		<Setter Property="Background"
				Value="{StaticResource BottomNavBackgroundColorBrush}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ctl:BottomNavigationBar">
					<Grid x:Name="PART_Grid"
						  Height="{TemplateBinding Height}"
						  Background="{TemplateBinding Background}" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="ctl:BottomNavigationBar"
		   BasedOn="{StaticResource DefaultBottomNavigationBarStyle}" />

</ResourceDictionary>
