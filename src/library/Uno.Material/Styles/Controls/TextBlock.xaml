<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="MaterialBaseTextBlockStyle"
		   TargetType="TextBlock">
		<Setter Property="TextTrimming"
				Value="CharacterEllipsis" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
	</Style>

	<!--
	******************************************************************
		STYLE GUIDE TEXTBLOCKS STYLES
	******************************************************************
	-->

	<Style x:Key="MaterialHeadline1"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="96" />
		<Setter Property="FontWeight"
				Value="Light" />
	</Style>

	<Style x:Key="MaterialHeadline2"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="60" />
		<Setter Property="FontWeight"
				Value="Light" />
	</Style>

	<Style x:Key="MaterialHeadline3"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="48" />
	</Style>

	<Style x:Key="MaterialHeadline4"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="34" />
	</Style>

	<Style x:Key="MaterialHeadline5"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="24" />
	</Style>

	<Style x:Key="MaterialHeadline6"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="20" />
		<Setter Property="FontWeight"
				Value="Medium" />
	</Style>

	<Style x:Key="MaterialSubtitle1"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="16" />
	</Style>

	<!-- Subtitle 2 -->
	<Style x:Key="MaterialSubtitle2"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="14" />
		<Setter Property="FontWeight"
				Value="Medium" />
	</Style>

	<!-- Body 1 -->
	<Style x:Key="MaterialBody1"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="16" />
	</Style>

	<!-- Body 2 -->
	<Style x:Key="MaterialBody2"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="14" />
	</Style>

	<!-- Button -->
	<Style x:Key="MaterialButtonTextBlockStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="14" />
		<Setter Property="FontWeight"
				Value="Medium" />
	</Style>

	<!-- Caption -->
	<Style x:Key="MaterialCaption"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="12" />
	</Style>

	<!-- Overline -->
	<Style x:Key="MaterialOverline"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBaseTextBlockStyle}">

		<Setter Property="FontSize"
				Value="10" />
	</Style>
</ResourceDictionary>
