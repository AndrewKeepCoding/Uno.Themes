<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					xmlns:android="http:///umbrella/ui/android"
					xmlns:not_android="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					mc:Ignorable="android">

	<!-- 
	
	For more information on the color system, consult this page
	https://material.io/design/color/the-color-system.html#color-theme-creation 
	
	-->

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="../Application/Colors.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<StaticResource x:Key="SelectControlBackgroundColor"
					ResourceKey="MaterialPrimaryBrush" />
	<StaticResource x:Key="SelectControlStrokeColor"
					ResourceKey="MaterialOnSurfaceMediumBrush" />

	<!-- ToggleSwitch Section -->

	<!-- Brushes for thumbtint colors -->
	<SolidColorBrush x:Key="PrimaryVariantDisabledThumbColorBrush"
					 Color="{ThemeResource MaterialPrimaryVariantDisabledThumbColor}" />
	<SolidColorBrush x:Key="SurfaceVariantBrush"
					 Color="{ThemeResource MaterialSurfaceVariantLightColor}" />

	<!-- Toggle On -->
	<StaticResource x:Key="SelectControlToggleOnButtonColor"
					ResourceKey="MaterialPrimaryBrush" />
	<StaticResource x:Key="SelectControlToggleOnBackgroundColor"
					ResourceKey="MaterialPrimaryDisabledBrush" />

	<!-- Toggle Off -->
	<not_android:StaticResource x:Key="SelectControlToggleOffButtonColor"
								ResourceKey="MaterialSurfaceBrush" />
	<android:StaticResource x:Key="SelectControlToggleOffButtonColor"
							ResourceKey="MaterialSurfaceVariantBrush" />
	<StaticResource x:Key="SelectControlToggleOffBackgroundColor"
					ResourceKey="MaterialOnSurfaceDisabledVariantBrush" />

	<!-- Toggle On Disabled -->
	<not_android:StaticResource x:Key="SelectControlToggleOnDisabledButtonColor"
								ResourceKey="MaterialPrimaryFocusedBrush" />
	<android:StaticResource x:Key="SelectControlToggleOnDisabledButtonColor"
							ResourceKey="MaterialPrimaryVariantDisabledThumbColorBrush" />
	<StaticResource x:Key="SelectControlToggleOnDisabledBackgroundColor"
					ResourceKey="MaterialPrimaryDraggedBrush" />

	<!-- Toggle Focus Brushes -->
	<StaticResource x:Key="SelectControlToggleOnFocusBackgroundColor"
					ResourceKey="MaterialPrimaryFocusedBrush" />
	<StaticResource x:Key="SelectControlToggleOffFocusButtonColor"
					ResourceKey="MaterialOnSurfaceDraggedBrush" />
</ResourceDictionary>
