<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- 
	
	For more information on the color system, consult this page
	https://material.io/design/color/the-color-system.html#color-theme-creation 
	
	-->

	<ResourceDictionary.ThemeDictionaries>

		<!-- Light Theme -->
		<ResourceDictionary x:Key="Light">
			<Color x:Key="MaterialPrimaryColor">#5B4CF5</Color>
			<Color x:Key="MaterialPrimaryVariantDarkColor">#353FE5</Color>
			<Color x:Key="MaterialPrimaryVariantLightColor">#B6A8FB</Color>
			<Color x:Key="MaterialSecondaryColor">#67E5AD</Color>
			<Color x:Key="MaterialSecondaryVariantDarkColor">#2BB27E</Color>
			<Color x:Key="MaterialSecondaryVariantLightColor">#9CFFDF</Color>
			<Color x:Key="MaterialBackgroundColor">#FFFFFF</Color>
			<Color x:Key="MaterialSurfaceColor">#FFFFFF</Color>
			<Color x:Key="MaterialErrorColor">#F85977</Color>
			<Color x:Key="MaterialOnPrimaryColor">#FFFFFF</Color>
			<Color x:Key="MaterialOnSecondaryColor">#000000</Color>
			<Color x:Key="MaterialOnBackgroundColor">#000000</Color>
			<Color x:Key="MaterialOnSurfaceColor">#000000</Color>
			<Color x:Key="MaterialOnErrorColor">#000000</Color>
			<Color x:Key="MaterialOverlayColor">#51000000</Color>

			<!-- TODO: Temporary until we figure out how to propertly set Theme Colors in BottomNavigationBar -->
			<Color x:Key="BottomNavBackgroundColor">#5B4CF5</Color>

			<!-- TODO: Temporary until we figure out how to propertly set Theme Colors in BottomNavigationBarItem -->
			<Color x:Key="BottomNavLabelFocusColor">#FFFFFF</Color>
			<Color x:Key="BottomNavIconFocusColor">#FFFFFF</Color>
			<Color x:Key="BottomNavLabelColor">#FFFFFF</Color>
			<Color x:Key="BottomNavIconColor">#FFFFFF</Color>
			<Color x:Key="BottomNavNotifBackgroundColor">#F85977</Color>
			<Color x:Key="BottomNavNotifLabelColor">#000000</Color>

			<SolidColorBrush x:Key="BottomNavPressedBrush"
							 Color="{StaticResource MaterialOnPrimaryColor}"
							 Opacity="0.10" />

			<!-- Variant Colors: Needed for android thumbtints. If a thumbtint color contains opacity, it will actually turn the thumb transparent. -->
			<!-- Non-opaque/transparent primary disabled color -->
			<Color x:Key="PrimaryVariantDisabledThumbColor">#E9E5FA</Color>
			<!-- Non-opaque/transparent white color that shows on white surfaces -->
			<Color x:Key="SurfaceVariantLightColor">#F7F7F7</Color>

		</ResourceDictionary>

		<!-- Dark Theme -->
		<ResourceDictionary x:Key="Dark">
			<Color x:Key="MaterialPrimaryColor">#B6A8FB</Color>
			<Color x:Key="MaterialPrimaryVariantDarkColor">#353FE5</Color>
			<Color x:Key="MaterialPrimaryVariantLightColor">#D4CBFC</Color>
			<Color x:Key="MaterialSecondaryColor">#67E5AD</Color>
			<Color x:Key="MaterialSecondaryVariantDarkColor">#2BB27E</Color>
			<Color x:Key="MaterialSecondaryVariantLightColor">#9CFFDF</Color>
			<Color x:Key="MaterialBackgroundColor">#121212</Color>
			<Color x:Key="MaterialSurfaceColor">#121212</Color>
			<Color x:Key="MaterialErrorColor">#CF6679</Color>
			<Color x:Key="MaterialOnPrimaryColor">#000000</Color>
			<Color x:Key="MaterialOnSecondaryColor">#000000</Color>
			<Color x:Key="MaterialOnBackgroundColor">#FFFFFF</Color>
			<Color x:Key="MaterialOnSurfaceColor">#DEFFFFFF</Color>
			<Color x:Key="MaterialOnErrorColor">#000000</Color>
			<Color x:Key="MaterialOverlayColor">#51FFFFFF</Color>

			<SolidColorBrush x:Key="BottomNavPressedBrush"
							 Color="{StaticResource MaterialOnSurfaceColor}"
							 Opacity="0.10" />

			<!-- TODO: Temporary until we figure out how to propertly set Theme Colors in BottomNavigationBar -->
			<Color x:Key="BottomNavBackgroundColor">#121212</Color>

			<!-- TODO: Temporary until we figure out how to propertly set Theme Colors in BottomNavigationBarItem -->
			<Color x:Key="BottomNavLabelFocusColor">#B6A8FB</Color>
			<Color x:Key="BottomNavIconFocusColor">#B6A8FB</Color>
			<Color x:Key="BottomNavLabelColor">#DEFFFFFF</Color>
			<Color x:Key="BottomNavIconColor">#DEFFFFFF</Color>
			<Color x:Key="BottomNavNotifBackgroundColor">#CF6679</Color>
			<Color x:Key="BottomNavNotifLabelColor">#000000</Color>

			<!-- Variant Colors: Needed for android thumbtints. If a thumbtint color contains opacity, it will actually turn the thumb transparent. -->
			<!-- Non-opaque/transparent primary medium color -->
			<Color x:Key="PrimaryVariantDisabledThumbColor">#57507C</Color>
			<Color x:Key="SurfaceVariantLightColor">#121212</Color>
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>

	<!-- Opacity for control states -->
	<x:Double x:Key="MatedialMediumOpacity">0.74</x:Double>
	<x:Double x:Key="MaterialHoverOpacity">0.04</x:Double>
	<x:Double x:Key="MaterialDisabledOpacity">0.38</x:Double>
	<x:Double x:Key="MaterialFocusedOpacity">0.12</x:Double>
	<x:Double x:Key="MaterialPressedOpacity">0.10</x:Double>
	<x:Double x:Key="MaterialDraggedOpacity">0.08</x:Double>
	
	<!-- Global brushes -->
	<SolidColorBrush x:Key="MaterialPrimaryBrush"
					 Color="{ThemeResource MaterialPrimaryColor}" />
	<SolidColorBrush x:Key="MaterialPrimaryVariantDarkBrush"
					 Color="{ThemeResource MaterialPrimaryVariantDarkColor}" />
	<SolidColorBrush x:Key="MaterialPrimaryVariantLightBrush"
					 Color="{ThemeResource MaterialPrimaryVariantLightColor}" />
	<SolidColorBrush x:Key="MaterialSecondaryBrush"
					 Color="{ThemeResource MaterialSecondaryColor}" />
	<SolidColorBrush x:Key="MaterialSecondaryVariantDarkBrush"
					 Color="{ThemeResource MaterialSecondaryVariantDarkColor}" />
	<SolidColorBrush x:Key="MaterialSecondaryVariantLightBrush"
					 Color="{ThemeResource MaterialSecondaryVariantLightColor}" />
	<SolidColorBrush x:Key="MaterialBackgroundBrush"
					 Color="{ThemeResource MaterialBackgroundColor}" />
	<SolidColorBrush x:Key="MaterialSurfaceBrush"
					 Color="{ThemeResource MaterialSurfaceColor}" />
	<SolidColorBrush x:Key="MaterialErrorBrush"
					 Color="{ThemeResource MaterialErrorColor}" />
	<SolidColorBrush x:Key="MaterialOnErrorBrush"
					 Color="{ThemeResource MaterialOnErrorColor}" />
	<SolidColorBrush x:Key="MaterialOnBackgroundBrush"
					 Color="{ThemeResource MaterialOnBackgroundColor}" />
	<SolidColorBrush x:Key="MaterialOverlayBrush"
					 Color="{ThemeResource MaterialOverlayColor}" />

	<!-- Primary Brushes -->
	<SolidColorBrush x:Key="MaterialPrimaryMediumBrush"
					 Color="{ThemeResource MaterialPrimaryColor}"
					 Opacity="{StaticResource MatedialMediumOpacity}" />
	<SolidColorBrush x:Key="MaterialPrimaryDisabledBrush"
					 Color="{ThemeResource MaterialPrimaryColor}"
					 Opacity="0.38" />
	<SolidColorBrush x:Key="MaterialPrimaryHoverBrush"
					 Color="{ThemeResource MaterialPrimaryColor}"
					 Opacity="0.04" />
	<SolidColorBrush x:Key="MaterialPrimaryFocusedBrush"
					 Color="{ThemeResource MaterialPrimaryColor}"
					 Opacity="0.12" />
	<SolidColorBrush x:Key="MaterialPrimaryPressedBrush"
					 Color="{ThemeResource MaterialPrimaryColor}"
					 Opacity="0.10" />
	<SolidColorBrush x:Key="MaterialPrimaryDraggedBrush"
					 Color="{ThemeResource MaterialPrimaryColor}"
					 Opacity="0.08" />
	<SolidColorBrush x:Key="MaterialPrimarySelectedBrush"
					 Color="{ThemeResource MaterialPrimaryColor}"
					 Opacity="0.08" />

	<!-- OnPrimary Brushes -->
	<!-- Only opacity should differ -->
	<!-- Issue #41 TODO: SolidColorBrushes set this way do not function with android thumbtints and tracktints -->
	<SolidColorBrush x:Key="MaterialOnPrimaryBrush"
					 Color="{ThemeResource MaterialOnPrimaryColor}" />
	<SolidColorBrush x:Key="MaterialOnPrimaryMediumBrush"
					 Color="{ThemeResource MaterialOnPrimaryColor}"
					 Opacity="0.74" />
	<SolidColorBrush x:Key="MaterialOnPrimaryDisabledBrush"
					 Color="{ThemeResource MaterialOnPrimaryColor}"
					 Opacity="0.38" />
	<SolidColorBrush x:Key="MaterialOnPrimaryHoverBrush"
					 Color="{ThemeResource MaterialOnPrimaryColor}"
					 Opacity="0.04" />
	<SolidColorBrush x:Key="MaterialOnPrimaryFocusedBrush"
					 Color="{ThemeResource MaterialOnPrimaryColor}"
					 Opacity="0.12" />
	<SolidColorBrush x:Key="MaterialOnPrimaryPressedBrush"
					 Color="{ThemeResource MaterialOnPrimaryColor}"
					 Opacity="0.10" />
	<SolidColorBrush x:Key="MaterialOnPrimaryDraggedBrush"
					 Color="{ThemeResource MaterialOnPrimaryColor}"
					 Opacity="0.08" />
	<SolidColorBrush x:Key="MaterialOnPrimarySelectedBrush"
					 Color="{ThemeResource MaterialOnPrimaryColor}"
					 Opacity="0.08" />

	<!-- OnSecondary Brushes -->
	<!-- Only opacity should differ -->
	<SolidColorBrush x:Key="MaterialOnSecondaryBrush"
					 Color="{ThemeResource MaterialOnSecondaryColor}"
					 Opacity="1.0" />
	<SolidColorBrush x:Key="MaterialOnSecondaryMediumBrush"
					 Color="{ThemeResource MaterialOnSecondaryColor}"
					 Opacity="0.74" />
	<SolidColorBrush x:Key="MaterialOnSecondaryDisabledBrush"
					 Color="{ThemeResource MaterialOnSecondaryColor}"
					 Opacity="0.38" />

	<!-- Surface Brushes -->
	<!-- Only opacity should differ -->
	<SolidColorBrush x:Key="MaterialSurfaceDisabledBrush"
					 Color="{ThemeResource MaterialSurfaceColor}"
					 Opacity="0.38" />

	<!-- MaterialOnSurface Brushes -->
	<!-- Only opacity should differ -->
	<SolidColorBrush x:Key="MaterialOnSurfaceBrush"
					 Color="{ThemeResource MaterialOnSurfaceColor}"
					 Opacity="1.0" />
	<SolidColorBrush x:Key="MaterialOnSurfaceMediumBrush"
					 Color="{ThemeResource MaterialOnSurfaceColor}"
					 Opacity="0.74" />
	<SolidColorBrush x:Key="MaterialOnSurfaceDisabledBrush"
					 Color="{ThemeResource MaterialOnSurfaceColor}"
					 Opacity="0.38" />
	<SolidColorBrush x:Key="MaterialOnSurfaceHoverBrush"
					 Color="{ThemeResource MaterialOnSurfaceColor}"
					 Opacity="0.04" />
	<SolidColorBrush x:Key="MaterialOnSurfaceFocusedBrush"
					 Color="{ThemeResource MaterialOnSurfaceColor}"
					 Opacity="0.12" />
	<SolidColorBrush x:Key="MaterialOnSurfacePressedBrush"
					 Color="{ThemeResource MaterialOnSurfaceColor}"
					 Opacity="0.10" />
	<SolidColorBrush x:Key="MaterialOnSurfaceDraggedBrush"
					 Color="{ThemeResource MaterialOnSurfaceColor}"
					 Opacity="0.08" />
	<SolidColorBrush x:Key="MaterialOnSurfaceSelectedBrush"
					 Color="{ThemeResource MaterialOnSurfaceColor}"
					 Opacity="0.08" />
	<SolidColorBrush x:Key="MaterialOnSurfaceDisabledVariantBrush"
					 Color="{ThemeResource MaterialOnSurfaceColor}"
					 Opacity="0.20" />

	<!-- TODO: Temporary until we figure out how to propertly set Theme Colors in BottomNavigationBar -->
	<SolidColorBrush x:Key="BottomNavBackgroundColorBrush"
					 Color="{ThemeResource BottomNavBackgroundColor}" />

	<!-- TODO: Temporary until we figure out how to propertly set Theme Colors in BottomNavigationBarItem -->
	<SolidColorBrush x:Key="BottomNavLabelFocusColorBrush"
					 Color="{ThemeResource BottomNavLabelFocusColor}" />
	<SolidColorBrush x:Key="BottomNavIconFocusColorBrush"
					 Color="{ThemeResource BottomNavIconFocusColor}" />
	<SolidColorBrush x:Key="BottomNavLabelColorBrush"
					 Color="{ThemeResource BottomNavLabelColor}"
					 Opacity="0.74" />
	<SolidColorBrush x:Key="BottomNavIconColorBrush"
					 Color="{ThemeResource BottomNavIconColor}"
					 Opacity="0.74" />
	<SolidColorBrush x:Key="BottomNavNotifBackgroundColorBrush"
					 Color="{ThemeResource BottomNavNotifBackgroundColor}" />
	<SolidColorBrush x:Key="BottomNavNotifLabelColorBrush"
					 Color="{ThemeResource BottomNavNotifLabelColor}" />

</ResourceDictionary>
