<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- 
	
	For more information on the color system, consult this page
	https://material.io/design/color/the-color-system.html#color-theme-creation 
	
	-->

	<ResourceDictionary.ThemeDictionaries>

		<!-- Light Theme -->
		<ResourceDictionary x:Key="Light">
			<Color x:Key="PrimaryColor">#5B4CF5</Color>
			<Color x:Key="PrimaryVariantDarkColor">#353FE5</Color>
			<Color x:Key="PrimaryVariantLightColor">#B6A8FB</Color>
			<Color x:Key="SecondaryColor">#67E5AD</Color>
			<Color x:Key="SecondaryVariantDarkColor">#2BB27E</Color>
			<Color x:Key="SecondaryVariantLightColor">#9CFFDF</Color>
			<Color x:Key="BackgroundColor">#FFFFFF</Color>
			<Color x:Key="SurfaceColor">#FFFFFF</Color>
			<Color x:Key="ErrorColor">#F85977</Color>
			<Color x:Key="OnPrimaryColor">#FFFFFF</Color>
			<Color x:Key="OnPrimaryMediumColor">#4AFFFFFF</Color>
			<Color x:Key="OnPrimaryDisabled">#26FFFFFF</Color>
			<Color x:Key="OnSecondaryHighColor">#000000</Color>
			<Color x:Key="OnSecondaryMediumColor">#4A000000</Color>
			<Color x:Key="OnSecondaryDisabledColor">#26000000</Color>
			<Color x:Key="OnBackgroundColor">#FFFFFF</Color>
			<Color x:Key="OnSurfaceColor">#FFFFFF</Color>
			<Color x:Key="OnSurfaceMediumColor">#3C000000</Color>
			<Color x:Key="OnSurfaceDisabledColor">#26000000</Color>

		</ResourceDictionary>

		<!-- Dark Theme -->
		<ResourceDictionary x:Key="Dark">
			<Color x:Key="PrimaryColor">#B6A8FB</Color>
			<Color x:Key="PrimaryVariantDarkColor">#353FE5</Color>
			<Color x:Key="PrimaryVariantLightColor">#D4CBFC</Color>
			<Color x:Key="SecondaryColor">#67E5AD</Color>
			<Color x:Key="SecondaryVariantDarkColor">#2BB27E</Color>
			<Color x:Key="SecondaryVariantLightColor">#9CFFDF</Color>
			<Color x:Key="BackgroundColor">#121212</Color>
			<Color x:Key="SurfaceColor">#121212</Color>
			<Color x:Key="ErrorColor">#CF6679</Color>
			<Color x:Key="OnPrimaryColor">#000000</Color>
			<Color x:Key="OnPrimaryMediumColor">#4A000000</Color>
			<Color x:Key="OnPrimaryDisabled">#26000000</Color>
			<Color x:Key="OnSecondaryHighColor">#000000</Color>
			<Color x:Key="OnSecondaryMediumColor">#4A000000</Color>
			<Color x:Key="OnSecondaryDisabledColor">#26000000</Color>
			<Color x:Key="OnBackgroundColor">#FFFFFF</Color>
			<Color x:Key="OnSurfaceColor">#57FFFFFF</Color>
			<Color x:Key="OnSurfaceMediumColor">#3CFFFFFF</Color>
			<Color x:Key="OnSurfaceDisabledColor">#26FFFFFF</Color>

		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>
	
	
	
	
	
	<!-- 
